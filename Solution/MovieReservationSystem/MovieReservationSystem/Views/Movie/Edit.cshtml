@model MovieReservationSystem.Models.MovieModel
@Html.Partial("~/Views/_NotificationResult.cshtml")";

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info"> Update Movie</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form asp-action="Edit" method="post" autocomplete="off">
            <div class="box">
                <div class="box-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label asp-for="@Model.Movie_Name" class="col-sm-3 control-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="@Model.Movie_Name" class="form-control" />
                                <span asp-validation-for="@Model.Movie_Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Description" class="col-sm-3 control-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="@Model.Description" class="form-control" />
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer text-right">
                    <button type="reset" class="btn btn-info">Reset</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a title="Delete" class="btn btn-danger text-white" data-toggle="modal" data-target="#deleteMovieModal" data-id="@Model.Id">Delete</a>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal fade" id="deleteMovieModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Movie</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a asp-action="Delete" asp-route-id="@Model.Id" title="Delete" class="btn btn-danger text-white">Delete</a>
            </div>
        </div>
    </div>
</div>